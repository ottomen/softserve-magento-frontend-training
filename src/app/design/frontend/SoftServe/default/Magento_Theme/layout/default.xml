<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalog.topnav">
            <block class="Magento\Framework\View\Element\Html\Link" name="best.products" before="account">
                <arguments>
                    <argument name="label" xsi:type="string">Best products</argument>
                    <argument name="path" xsi:type="string">best-products</argument>
                    <argument name="class" xsi:type="string" translate="false">ui-menu-item</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/ss.png</argument>
                <argument name="logo_img_width" xsi:type="number">35</argument>
                <argument name="logo_img_height" xsi:type="number">35</argument>
            </arguments>
        </referenceBlock>
        <move element="logo" destination="header.panel" before="-"/>
    </body>
</page>